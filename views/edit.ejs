<% include partials/header %>

<div class ="container">
<form id="addNew" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
  		<h4>Edit Blog</h4>
	<div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type ="text"class="form-control" name ="blog[title]" value = "<%=blog.title%>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Image</label>
    <input type ="text" name ="blog[image]" class="form-control" value = "<%=blog.image%>">
  </div>
	 <div class="form-group">
    <label for="exampleFormControlTextarea1">Blog Content</label>
    <textarea class="form-control" name="blog[body]" id="exampleFormControlTextarea1" rows="15"><%=blog.body%></textarea>
    <small id="emailHelp" class="form-text text-muted">HTML can be used</small>
  </div>	
	<div class="form-group">
	<button type="submit" class="btn btn-dark">Submit</button>
	</div>
	<div class="form-group">
	<a class="form-group" href="/">Go back</a>
	</div>
	</form>
</div>

